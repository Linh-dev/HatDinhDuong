@model eFashionShop.ViewModels.Catalog.Products.ProductCreateRequest

@{
    ViewData["Title"] = "Tạo mới sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <h1 class="mt-4">Tạo mới sản phẩm</h1>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="AdminProduct">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-8">
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Tên</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Mô tả</label>
                        <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Details" class="control-label">Mô tả chi tiết</label>
                        <textarea id="txt_details" asp-for="Details" rows="8" class="form-control"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Trademark" class="control-label">Thương hiệu</label>
                        <input asp-for="Trademark" class="form-control" />
                        <span asp-validation-for="Trademark" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductOrigin" class="control-label">Nguồn gốc</label>
                        <input asp-for="ProductOrigin" class="form-control" />
                        <span asp-validation-for="ProductOrigin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ingredient" class="control-label">Thành phần</label>
                        <input asp-for="Ingredient" class="form-control" />
                        <span asp-validation-for="Ingredient" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Expiry" class="control-label">Hạn sử dụng</label>
                        <input asp-for="Expiry" class="form-control" />
                        <span asp-validation-for="Expiry" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogDescription" class="control-label">Blog mô tả công dụng và cách sử dụng</label>
                        <textarea asp-for="BlogDescription" rows="8" class="form-control"></textarea>
                        <span asp-validation-for="BlogDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThumbnailImage" class="control-label">Ảnh</label>
                        <input asp-for="ThumbnailImage" type="file" class="form-control" />
                        <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsFeatured" class="control-label">Sản phẩm nổi bật</label>
                        <input asp-for="IsFeatured" type="checkbox" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>